@import '../variables'

.group
  position: relative
  margin: .7em 0
  font-size: 16px

.input
  font-size: 1em
  padding: 10px 10px 10px 5px
  display: block
  width: 100%
  border: none
  border-bottom: 1px solid borderColor
  background: transparent
  transition: 0.2s ease all

  &:focus { outline: none }

.label
  color: #999
  font-size: .9em
  font-weight: normal
  position: absolute
  pointer-events: none
  left: 5px
  top: 10px
  transition: 0.2s ease all



/* active state */
.input:focus ~ .label,
.input:valid ~ .label
  top: -1em
  font-size: .7em
  color: accentColor

.bar
  position: relative
  display: block
  width: 100%
  top: 1px

  &:before,
  &:after
    content: ''
    height: 2px
    width: 0
    bottom: 1px
    position: absolute
    background: accentColor
    transition: 0.2s ease all

  &:before { left: 50% }
  &:after  { right: 50% }

/* active state */
.input:focus ~ .bar:before,
.input:focus ~ .bar:after
  width:50%
