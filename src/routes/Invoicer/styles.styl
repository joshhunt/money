@import './variables'

.body
  background: lighten(backgroundColor, 90%)
  padding: 0

.root
  display: flex

  > div:nth-child(3)
    font-size: 15px

  @media (max-width: 1290px)
    flex-wrap: wrap

@page
  size: A4
  margin: 0

@media print

  html, body
    width: 210mm
    height: 297mm
    margin: 0

  .body, .page
    margin: 0
    background: backgroundColor
    border: none
    width: 100%

  .editor
    display: none

  .root
    display: block
