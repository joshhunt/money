* { box-sizing: border-box; }

body
    font-family: 'Lato'
    font-size: 20px
    background: #151718
    color: invert(#151718)
    padding: 0 20px

.appRoot
  width: 100%
  max-width: 700px
  margin: 50px auto 0 auto
  text-align: left

.inputs
  display: flex
  flex-wrap: wrap

  .text
    position: relative
    top: 5px
    flex: 0 0 auto

.input
  background: none
  border: 1px none lighten(#151718, 50%)
  border-bottom-style: solid
  color: invert(#151718)
  padding: 5px
  text-align: center
  outline: none !important
  margin: 0 10px

  &.income { width: 65% }
  &.rate { width: 35% }

.result
  margin-top: 2em